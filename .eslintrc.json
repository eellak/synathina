{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "overrides": [{
        "files": ["**/**webpack.config.js"],
        "rules": {
            "node/no-unpublished-require": 0,
            "node/no-missing-require": 0
        }
    }],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}